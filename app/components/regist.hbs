<style>
    label {
        font-weight: 500;
        margin-bottom: 5px;
        display: block;
    }
    small {
        color: #6c757d;
        font-size: 0.875em;
    }
</style>

<div id="regist-form-container">
    <h2>Appointment Request</h2>
    <form {{on "submit" this.submitClient}} class="needs-validation" novalidate>

        <div class="mb-3">
            <label for="regist-fullName">Full Name</label>
            <input type="text" id="regist-fullName" class="form-control" placeholder="Enter your full name" required
                   {{on "input" this.updateName}} value={{this.clientName}}>
            <div class="invalid-feedback">
                Full Name is required.
            </div>
        </div>

        <div class="mb-3">
            <label for="regist-email">Email Address</label>
            <input type="email" id="regist-email" class="form-control" placeholder="Enter your email address" required
                   {{on "input" this.updateEmail}} value={{this.clientEmail}}>
            <div class="invalid-feedback">
                Please provide a valid email address.
            </div>
        </div>

        <div class="mb-3">
            <label for="regist-phone">Phone</label>
            <input type="number" id="regist-phone" class="form-control" placeholder="Enter your phone number" pattern="[0-9]{10}" required
                   {{on "input" this.updatePhone}} value={{this.clientPhone}}>
            <div class="invalid-feedback">
                Phone number must be 10 digits.
            </div>
            <small>Format: 10 numeric digits.</small>
        </div>

        <div class="mb-3">
            <label for="regist-dateTime">Preferred Date and Time</label>
            <input type="datetime-local" id="regist-dateTime" class="form-control" required
                   {{on "input" this.updateDate}} value={{this.appointmentDate}}>
            <div class="invalid-feedback">
                Please select a preferred date and time.
            </div>
        </div>

        <div class="mb-3">
            <label for="regist-serviceType">Service Type</label>
            <select id="regist-serviceType"required
                    {{on "change" this.updateService}} value={{this.requestService}}>
                <option value="">Select a service</option>
                <option value="Orthodontics">Orthodontics</option>
                <option value="Dental surgery">Dental surgery</option>
                <option value="Endodontics">Endodontics</option>
                <option value="Periodontology">Periodontology</option>
                <option value="General dentistry">General dentistry</option>
                <option value="Dental implants">Dental implants</option>
            </select>
            <div class="invalid-feedback">
                Please select a service type.
            </div>
        </div>

        <div>
            <button class="mt-3 btn btn-primary" type="submit" id="regist-submit-button">Request Appointment</button>
        </div>
    </form>

    <div id="regist-thank-you-screen">
        <div class="thank-you-content text-center p-5">
            <div class="thank-you-icon mb-4">
                <img src="https://cdn-icons-png.flaticon.com/512/2961/2961957.png" alt="Smile Icon" width="100" height="100">
            </div>
            <h2 class="thank-you-title display-4 fw-bold mb-3">Thank You!</h2>
            <p class="thank-you-message fs-5 mb-4">
                Your appointment request has been successfully submitted. <br>
                Our team at <span class="text-primary fw-bold">Neo Smile</span> will contact you shortly to confirm your appointment.
            </p>
            <button id="regist-thank-you-close-button" class="btn btn-primary btn-lg" type="button">
                Close
            </button>
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center">
        <CommentRegist></CommentRegist>
        <ManageRecords></ManageRecords>
    </div>

</div>

<script>
    document.getElementById('regist-thank-you-close-button').addEventListener('click', function() {
        document.getElementById('regist-thank-you-screen').classList.remove('show');
    });
</script>